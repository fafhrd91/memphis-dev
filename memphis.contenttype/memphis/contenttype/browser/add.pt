<div tal:define="data view/data" i18n:domain="memphis.contenttype">
  <h1>Select content type</h1> 
  <hr />

  <ul tal:condition="data">
    <li tal:repeat="ct data">
      <div>
	<a tal:attributes="href string:addcontent.html?ctname=${ct/name}" 
	   tal:content="ct/title" />  
      </div>  
      <div tal:content="ct/description" />
    </li>
  </ul>
</div>
