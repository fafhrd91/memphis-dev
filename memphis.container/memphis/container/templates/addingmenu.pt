<tal:block condition="view.factories">
  <br /><br />
  <div class="z-content-adding">
    <h2>Add content</h2>
    <div class="z-page-description"> 
      Select the type of item you want to add to your container.</div>

    <fieldset>
      <legend>Available items</legend>

      <ul class="z-listing">
	<li tal:repeat="factory view.factories">
	  <a href="${view.url}+/${factory.name}/">${factory.title}</a>
	  <div class="byline">${factory.description}</div>
	</li>
      </ul>
    </fieldset>
  </div>
</tal:block>
